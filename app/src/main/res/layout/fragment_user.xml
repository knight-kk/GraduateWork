<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="cn.edu.abc.graduatework.ui.fragment.UserFragment">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_layout_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingTop="30dp"
        android:paddingBottom="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/profile" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_to_login"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:background="@drawable/bg_btn_border"
            android:text="登录/注册"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:visibility="visible" />


        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="用户名"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_user_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="123@qq.com"
                android:textColor="@color/text_color"
                android:textSize="14sp" />


        </LinearLayout>
    </android.support.v7.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/driver_line_color" />


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#fff"
        android:orientation="vertical"
        app:divider="@drawable/driver_line_2"
        app:showDividers="middle|end">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/user_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="{md-notifications #666666 120% }   我的消息"
            android:textColor="@color/text_color" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/user_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="{md-question-answer #666666 120% }   我的圈子"
            android:textColor="@color/text_color" />


        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/user_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="{md-insert-drive-file #666666 120% }   我的文章"
            android:textColor="@color/text_color" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/user_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="{md-star #666666 120% }   我的收藏"
            android:textColor="@color/text_color" />
    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#fff"
        android:orientation="vertical"
        app:divider="@drawable/driver_line_2"
        app:showDividers="middle|end">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="{md-settings #666666 120% spin}   设置"
            android:textColor="@color/text_color" />


        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/by_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="{md-info #666666 120% }   关于"
            android:textColor="@color/text_color" />

    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v7.widget.LinearLayoutCompat>